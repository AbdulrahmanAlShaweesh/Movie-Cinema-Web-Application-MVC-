@model CinemaMovieWebApplication.Models.Entities.CinemaModel

@{
    ViewData["Title"] = "Cinema Details";
}


<div class="row text">
    <div class="col-lg-5 col-md-7 col-sm-12 mx-md-5">
         <h5 style="color: #000;" class="mt-5 mb-4">@Model.Name Detials</h5>
         <di class="mt-5 mb-5">
                <img style="width: 200px; height:200px" src="@Url.Content(Model.Logo)"/>
         </di>

         <div class="mt-3 mb-3">
            <h6 style="font-family: 'Lora', serif;">@Html.DisplayNameFor(n => n.Name)</h6>
            <p style="font-size:20px; font-family: 'Lora', serif; margin-top: -5px;">@Html.DisplayFor(n => n.Name)</p>
         </div>

         <div class="mb-3">
            <h6 style="font-family: 'Lora', serif;">@Html.DisplayNameFor(b => b.Description)</h6>
            <p style=" font-family: 'Lora', serif; px-3">@Html.DisplayFor(b => b.Description)</p>
         </div>
        
        <div class="mb-3 d-flex align-content-center">
            <h6 style="font-family: 'Lora', serif;" class="me-2">@Html.DisplayNameFor(a => a.Location)</h6>
            <p style="font-family: 'Lora', serif;">@Html.DisplayFor(a => a.Location)</p>
        </div>

        <div class="mb-3 d-flex align-content-center">
            <h6 style="font-family: 'Lora', serif;" class="me-2">@Html.DisplayNameFor(a => a.PhoneNumber)</h6>
            <p style="font-family: 'Lora', serif;">@Html.DisplayFor(a => a.PhoneNumber)</p>
        </div>

        <div class="mb-3 d-flex align-content-center">
            <h6 style="font-family: 'Lora', serif;" class="me-2">@Html.DisplayNameFor(a => a.OpeningHours)</h6>
            <p style="font-family: 'Lora', serif;">@Html.DisplayFor(a => a.OpeningHours)</p>
        </div>

         <div class="mb-3 d-flex align-content-center">
            <h6 style="font-family: 'Lora', serif;" class="me-2">@Html.DisplayNameFor(a => a.Website)</h6>
            <p style="font-family: 'Lora', serif;">@Html.DisplayFor(a => a.Website)</p>
        </div>

        <div class="mb-3 d-flex align-content-center">
            <h6 style="font-family: 'Lora', serif;" class="me-2">@Html.DisplayNameFor(a => a.Email)</h6>
            <p style="font-family: 'Lora', serif;">@Html.DisplayFor(a => a.Email)</p>
        </div>

        <div class="mb-3 d-flex align-content-center">
            <h6 style="font-family: 'Lora', serif;" class="me-2">@Html.DisplayNameFor(a => a.Facilities)</h6>
            <p style="font-family: 'Lora', serif;">@Html.DisplayFor(a => a.Facilities)</p>
        </div>
        

        <div class="d-flex align-content-center justify-content-between">
            <a class="btn btn-outline-secondary" asp-action="GetAllCinemas">All Actors</a>
            <a class="btn btn-outline-success me-3" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        </div>
    </div>
</div>