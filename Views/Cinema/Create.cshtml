@model CinemaMovieWebApplication.Data.viewModel.CreateCinemaViewModel

@{
    ViewData["Title"] = "Create Cinema";
}

<div class="row text">
    <div class="col-sm-12 px-md-5">
        <p class="mt-5">
            <h1 style="color:#000; font-size:30px; margin-bottom: 28px; font-family: 'Lora', serif;">Add a new actor</h1>
        </p>

        <form asp-action="Create" method="post" enctype="multipart/form-data"> 
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row mb-3">
                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <div class="mb-3">
                            <label asp-for="Logo" class="form-label" style="font-family: 'Lora', serif;"></label>
                            <input asp-for="Logo" class="form-control" type="file" id="formFile">
                        </div>
                        <span style="font-size: 13px; font-family: 'Lora', serif;" asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label" style="font-family: 'Lora', serif;"></label>
                        <input asp-for="Name" class="form-control px-3" />
                        <span style="font-size: 13px; font-family: 'Lora', serif;" asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label" style="font-family: 'Lora', serif;"></label>
                        <input asp-for="Description" class="form-control px-3" />
                        <span style="font-size: 13px; font-family: 'Lora', serif;" asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Location" class="control-label" style="font-family: 'Lora', serif;"></label>
                        <input asp-for="Location" class="form-control px-3" />
                        <span style="font-size: 13px; font-family: 'Lora', serif;" asp-validation-for="Location" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label" style="font-family: 'Lora', serif;"></label>
                        <input asp-for="PhoneNumber" class="form-control px-3" />
                        <span style="font-size: 13px; font-family: 'Lora', serif;" asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label asp-for="OpeningHours" class="control-label" style="font-family: 'Lora', serif;"></label>
                        <input asp-for="OpeningHours" class="form-control px-3" />
                        <span style="font-size: 13px; font-family: 'Lora', serif;" asp-validation-for="OpeningHours" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Website" class="control-label" style="font-family: 'Lora', serif;"></label>
                        <input asp-for="Website" class="form-control px-3" />
                        <span style="font-size: 13px; font-family: 'Lora', serif;" asp-validation-for="Website" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label" style="font-family: 'Lora', serif;"></label>
                        <input asp-for="Email" class="form-control px-3" />
                        <span style="font-size: 13px; font-family: 'Lora', serif;" asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Facilities" class="control-label" style="font-family: 'Lora', serif;"></label>
                        <input asp-for="Facilities" class="form-control px-3" />
                        <span style="font-size: 13px; font-family: 'Lora', serif;" asp-validation-for="Facilities" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="my-3 ">
                 <input type="submit" class="btn btn-outline-primary" value="Submit" />
                <a class="btn btn-outline-secondary" asp-action="GetAllCinemas">Cancel</a>
            </div>
        </form>
    </div>
</div>

