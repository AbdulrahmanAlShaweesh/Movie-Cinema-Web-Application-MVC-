@model List<CinemaMovieWebApplication.Models.Entities.ActorModel>

@{
    ViewData["Title"] = "Actors";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-end mb-4 ">
    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-outline-success shadow-sm p-2"><i
            class="fas fa-file-medical me-2"></i>Add new actor</a>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table" >
              <thead>
                    <tr style="border: none;">
                        <th class='align-middle' style="border: none;">@Html.DisplayNameFor(model => model[1].ProfileImage)</th>
                        <th class='align-middle' style="text-align: center; border: none;">@Html.DisplayNameFor(model => model[0].FullName)</th>
                        <th class='align-middle' style="text-align: center; border: none;">@Html.DisplayNameFor(model => model[0].bio)</th>
                        <th class='align-middle' style="text-align: center; border: none;">@Html.DisplayNameFor(model => model[0].AwardCount)</th>
                        <th class='align-middle' style="text-align: center; border: none;">Actions</th>
                    </tr>
              </thead>
              <tbody>
                    @foreach(var actor in Model) {
                        <tr style="border-bottom: 15px solid transparent; border-top: 0px solid transparent;">
                            <td  class="align-middle" style="padding-top: 15px; padding-bottom: 20px;">
                                <img draggable="false" class="rounded-circle" src="@Url.Content(actor.ProfileImage)" alt="@actor.FullName image" style="width: 150px; height: 150px; object-fit: cover;">
                            </td>
                            <td style="vertical-align: middle; padding-top: 15px; padding-bottom: 20px; text-align: center;">@Html.DisplayFor(modelItem => actor.FullName)</td>
                            <td class="align-middle" style="padding-top: 15px; padding-bottom: 20px;">@Html.DisplayFor(modelItem => actor.bio)</td>
                            <td style="vertical-align: middle; text-align: center; padding-top: 15px; padding-bottom: 20px;">@actor.AwardCount</td>
                           <td style="vertical-align: middle; padding-top: 15px; padding-bottom: 20px;"> 
                                 <div class="d-flex align-items-center" >
                                    <a class="btn btn-outline-primary d-flex align-items-center justify-content-center mx-1" style="max-width: 80px;"> 
                                        <i class="bi bi-pencil-square me-1"></i> Edit
                                    </a> 
                                    <a class="btn btn-outline-info d-flex align-items-center justify-content-center mx-1" style="max-width: 80px;"> 
                                        <i class="bi bi-eye me-1"></i> Details
                                    </a> 
                                    <a class="btn btn-outline-danger d-flex align-items-center justify-content-center mx-1" style="max-width: 80px;"> 
                                        <i class="bi bi-trash me-1"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
              </tbody>
        </table>
    </div>
</div>

