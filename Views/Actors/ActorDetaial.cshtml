@model CinemaMovieWebApplication.Models.Entities.ActorModel

@{
    ViewData["Title"] = "Actor Detials";
}


<div class="row text">
    <div class="col-lg-5 col-md-7 col-sm-12 mx-md-5">
         <h5 style="color: #000;" class="mt-5 mb-4">@Model.FullName Detials</h5>
         <di class="mt-5 mb-5">
                <img style="width: 200px; height:200px" src="@Url.Content(Model.ProfileImage)"/>
         </di>

         <div class="mt-3 mb-3">
            <h6 style="font-family: 'Lora', serif;">@Html.DisplayNameFor(n => n.FullName)</h6>
            <p style="font-size:20px; font-family: 'Lora', serif; margin-top: -5px;">@Html.DisplayFor(n => n.FullName)</p>
         </div>

         <div class="mb-3">
            <h6 style="font-family: 'Lora', serif;">@Html.DisplayNameFor(b => b.bio)</h6>
            <p style=" font-family: 'Lora', serif; px-3">@Html.DisplayFor(b => b.bio)</p>
         </div>
        
        <div class="mb-3 d-flex align-content-center">
            <h6 style="font-family: 'Lora', serif;" class="me-2">@Html.DisplayNameFor(a => a.AwardCount)</h6>
            <p style="font-family: 'Lora', serif;">@Html.DisplayFor(a => a.AwardCount)</p>
        </div>

        <div class="d-flex align-content-center justify-content-between">
            <a class="btn btn-outline-secondary" asp-action="GetAllActors">All Actors</a>
            <a class="btn btn-outline-success me-3" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        </div>
    </div>
</div>