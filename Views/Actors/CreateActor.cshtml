@model CinemaMovieWebApplication.Data.viewModel.CreateViewModel

@{
    ViewData["Title"] = "Create Actor";
}

<div class="row text">
    <div class="col-sm-12 px-md-5">
        <p class="mt-5">
            <h1 style="color:#000; font-size:30px; margin-bottom: 28px; font-family: 'Lora', serif;">Add a new actor</h1>
        </p>

        <form asp-action="CreateActor" method="post" enctype="multipart/form-data"> 
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row mb-3">
                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <div class="mb-3">
                            <label asp-for="ProfileImage" class="form-label" style="font-family: 'Lora', serif;"></label>
                            <input asp-for="ProfileImage" class="form-control" type="file" id="formFile">
                        </div>
                        <span style="font-size: 13px; font-family: 'Lora', serif;" asp-validation-for="ProfileImage" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label" style="font-family: 'Lora', serif;"></label>
                        <input asp-for="FullName" class="form-control px-3" />
                        <span style="font-size: 13px; font-family: 'Lora', serif;" asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label asp-for="bio" class="control-label" style="font-family: 'Lora', serif;"></label>
                        <input asp-for="bio" class="form-control px-3" />
                        <span style="font-size: 13px; font-family: 'Lora', serif;" asp-validation-for="bio" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label asp-for="AwardCount" class="control-label" style="font-family: 'Lora', serif;"></label>
                        <input asp-for="AwardCount" class="form-control px-3" />
                        <span style="font-size: 13px; font-family: 'Lora', serif;" asp-validation-for="AwardCount" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="my-3 ">
                 <input type="submit" class="btn btn-outline-primary" value="Submit" />
                <a class="btn btn-outline-secondary" asp-action="GetAllActors">Cancel</a>
            </div>
        </form>
    </div>
</div>
